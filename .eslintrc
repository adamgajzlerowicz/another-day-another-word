{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-underscore-dangle": "off",
    "curly": "off",
    "no-use-before-define": [
      "error",
      "nofunc"
    ],
    "keyword-spacing": "error",
    "space-before-blocks": [
      "error",
      "always"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-var": "error",
    "object-shorthand": [
      "error",
      "always"
    ],
    "prefer-const": "error",
    "max-depth": [
      "error",
      5
    ],
    "max-len": [
      "error",
      145,
      2
    ],
    "max-statements": [
      "error",
      20
    ],
    "complexity": [
      "warn",
      5
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-process-exit": "error",
    "react/prop-types": 0,
    "react/no-did-mount-set-state": "error",
    "react/no-did-update-set-state": "error",
    "react/prefer-es6-class": [
      "error",
      "always"
    ],
    "react/jsx-first-prop-new-line": [
      "warn",
      "multiline-multiprop"
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "rest-spread-spacing": [
      "error",
      "never"
    ],
    "space-infix-ops": ["error", {"int32Hint": false}]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "React": true
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  }
}
